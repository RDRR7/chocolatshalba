<div class="container">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="page-header">
            <h1>Factura</h1>
          </div>
          <%= form_for [@invoice,@invoice.bills.build] do |f| %>
          <div class="form-group">
              <%= f.label :code %>
              <%= f.number_field :code, class: 'form-control' %>
            </div>

            <div class="form-group">
              <br><%= f.label :invoice_doc %>
              <%= f.file_field :invocie_doc, class: 'form-control'%>
            </div>
            <br>
            <%= f.submit 'Subir', class: 'btn btn-primary' %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
