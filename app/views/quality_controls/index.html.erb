<div class="container">
  <div class="form-signup">
    <div class="row">
      <div class="col m12">
        <div class="card">
          <div class="card-content">
            <div class="page-header">
              <h1>Controles de ingreso</h1>
            </div>
            <table class="striped">
              <thead>
                <tr>
                  <th>Recibido por</th>
                  <th>Entregado por</th>
                  <th>Fecha de Ingreso</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @entries.each do |entry| %>
                  <% if QualityControl.where(batch_id: entry.batches.ids).count(:id) < entry.batches.count(:id)%>
                    <tr>
                      <td><%= entry.receivedBy %></td>
                      <td><%= entry.deliveredBy %></td>
                      <td><%= entry.entryDate %></td>
                      <td><%= link_to "Lotes", entry %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
