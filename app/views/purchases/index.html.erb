<div class="container">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="page-header">
            <h1>Compra de Lotes</h1>
          </div>
          <table class="striped">
            <thead>
            <tr>
              <th>Lote</th>
              <th>Control de Ingreso</th>
              <th>Organizaci√≥n</th>
              <th>Fecha de Ingreso</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @batches.each do |batch| %>
                <% if batch.buy == 1 and batch.purchase == nil%>
                    <tr>
                      <td><%= batch.enterCode %></td>
                      <td><%=	batch.entry_control.entry_number %></td>
                      <td><%=	batch.entry_control.organization.name %></td>
                      <td><%=	batch.entry_control.entryDate %></td>
                      <td><%=	link_to "Comprar", new_batch_purchase_path(batch) %></td>
                    </tr>
                <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
