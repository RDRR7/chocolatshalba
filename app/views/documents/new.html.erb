<div class="container">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="page-header">
            <h1>Documento</h1>
          </div>
          <%= form_for [@entry,@entry.documents.build] do |f| %>
          <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>

            <div class="form-group">
              <br><%= f.label :ec_data %>
              <%= f.file_field :ec_data, class: 'form-control'%>
            </div>
            <br>
            <%= f.submit 'Subir', class: 'btn btn-primary' %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
