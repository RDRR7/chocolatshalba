<!DOCTYPE html>
<html>
  <head>
    <title>Chocolatshalba</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if current_user %>
    <header>
        <nav class="navbar">
          <div class="nav-wrapper">
              <a href="#!" class="brand-logo">Chocolats Halba</a>
              <ul class="right hide-on-med-and-down">
                  <li><a rel="nofollow" data-method="delete" href="/users/sign_out">Salir</a></li>
              </ul>
          </div>
        </nav>
        <ul class="side-nav fixed">
          <% if current_user.admin_role %>
            <li><a class="white-text">Admin</a></li>
            <li><%= link_to 'AdministraciÃ³n', rails_admin.dashboard_path, class:"white-text li-back"%></li>
          <% end %>
          <% if current_user.warehouse_role || current_user.admin_role %>
            <li><a class="white-text">Bodega</a></li>
            <li><%= link_to 'Control de ingreso', organizations_path, class:"white-text li-back"%></li>
            <li><%= link_to 'Inventario', '#', class:"white-text li-back"%></li>
            <li><%= link_to 'Movimiento de lotes', '#', class:"white-text li-back"%>
                <% if Notification.count == 1%>
                    <span class="new badge" data-badge-caption="nuevo">1</span></li>
                <% elsif  Notification.count > 1 %>
                    <span class="new badge" data-badge-caption="nuevos"><%=	Notification.count %></span></li>
                <% end %>
            </li>    
            <li><%= link_to 'Control de Calidad', quality_controls_index_path, class:"white-text li-back"%></li>
          <% end %>
        </ul>      
    </header>
  <% end %>
  <body>
  	<div class="container">
      <% if current_user %>
        <br>
  		  <p class="notice"><%= notice %></p>
		    <p class="alert"><%= alert %></p>
      <% end %>
    	<%= yield %>
	</div>
  </body>
</html>